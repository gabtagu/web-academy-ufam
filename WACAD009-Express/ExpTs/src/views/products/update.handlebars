<div class='container'>
  <div class='row'>
    <div class='d-flex align-items-center justify-content-between'>
      <h2>Atualizar Produto</h2>
      <a href='/products'><i class='bi bi-arrow-return-left'></i></a>
    </div>
    <div class='col-6'>

      <form action='/products/update/{{product.id}}' method='post'>
        <div class='mb-3'>
          <label for='name' class='form-label'>Nome do Produto</label>
          <input
            type='text'
            class='form-control'
            id='name'
            name='name'
            value='{{product.name}}'
          />
        </div>

        <div class='mb-3'>
          <label for='price' class='form-label'>Pre√ßo</label>
          <input
            type='text'
            class='form-control'
            id='price'
            name='price'
            value='{{product.price}}'
          />
        </div>

        <div class='mb-3'>
          <label for='stock' class='form-label'>Estoque</label>
          <input
            type='text'
            class='form-control'
            id='stock'
            name='stock'
            value='{{product.stock}}'
          />
        </div>

        <button type='submit' class='btn btn-primary'>Submit</button>
      </form>

    </div>
  </div>
</div>